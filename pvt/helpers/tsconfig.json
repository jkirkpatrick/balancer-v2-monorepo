{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDirs": ["./src", "./scripts", "./test"],
    "noImplicitAny": false
  },
  "include": ["src", "plugins"],
  "exclude": ["node_modules", "src/test/**/*.ts"],
  "files": ["./hardhat.config.ts"] 
}
